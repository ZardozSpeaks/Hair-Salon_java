<!DOCTYPE html>
<html>
  <head>
    <title>Joe's Barber Shop</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <link rel="stylesheet" href="/css/app.css" type="text/css">
  </head>
  <body>
    <div class="container">

      <div class="pagehead">
        <h1>Joe's Barber Shop</h1>
      </div>

      <div class="row">
        <div id="left-col" class="col-md-6">
          <h2>List of Clients</h2>

          <form action="/" method="post">
            <div class="form-group">
              <select id="stylist" name="stylist" class="form-control" type="text" onchange="this.form.submit();">
                <option selected="true" disabled="disabled">Choose a Stylist</option>
                #foreach($stylist in $stylists)
                <option value="$stylist.getId()">$stylist.getStylistName()</option>
                #end
              </select>
            </div>
          </form>

          #if($listStylistName)
          <h4>$listStylistName</h4>
          #end
          <ul>
            #foreach ($client in $clients)
            <a href="/client/$client.getId()"><li>$client.getName()</li></a>
            #end
          </ul>

          <!-- Edit Database Control Panel -->
          <a href="/new-client"><button class="btn btn-info">Add a Client</button></a>
        </div>
        <div id="right-col" class="col-md-6">
          #parse( $template )
        </div>
      </div>


    </div>
  </body>
</html>
